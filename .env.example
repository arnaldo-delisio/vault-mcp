# Server Configuration
SERVER_URL=https://your-railway-app.railway.app
PORT=3000

# Database (Supabase PostgreSQL connection string for OAuth tables)
DATABASE_URL=postgresql://postgres:[password]@[host]:[port]/postgres

# Supabase Vault Client
SUPABASE_URL=https://[project-id].supabase.co
SUPABASE_SERVICE_ROLE_KEY=[service-role-key-not-anon]

# OAuth Configuration
OAUTH_CLIENT_ID=[generate-random-string]
OAUTH_CLIENT_SECRET=[generate-random-string]
OAUTH_PASSWORD_HASH=[bcrypt-hash-of-password]
SESSION_SECRET=[generate-random-string]

# API Authentication
API_KEY=[generate-random-string]

# OpenAI Configuration (tool discovery embeddings)
# Required for intelligent tool search via vault_search_tools
# Uses text-embedding-3-small model (~$0.01 for 5-10 tools on startup)
OPENAI_API_KEY=sk-your-openai-api-key-here
